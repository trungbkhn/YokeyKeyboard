<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#0018FF"
                android:centerColor="#FF00FE"
                android:endColor="#FFE600" android:angle="360"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#4355FF"
                android:centerColor="#FF35FD"
                android:endColor="#FFE600" android:angle="360"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>