<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="tab_text">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="tab_text_color">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="drawableTextView">
    </style>

    <style name="ActionMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <declare-styleable name="RealtimeBlurView">
        <attr format="dimension" name="realtimeBlurRadius"/>
        <attr format="float" name="realtimeDownsampleFactor"/>
        <attr format="color" name="realtimeOverlayColor"/>
    </declare-styleable>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#FBC267</item>
        <item name="android:textColor">#CC6060</item>
        <item name="android:textColorPrimary">#151515</item>

    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="CustomAnimDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_down_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_up_animation</item>
        <!-- New MaterialComponents attributes. -->
    </style>

    <style name="CustomStyleAnimDialogFragment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
        <!-- New MaterialComponents attributes. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="cornerShapeableImageView3">
        <item name="cornerSize">3dp</item>
    </style>

</resources>