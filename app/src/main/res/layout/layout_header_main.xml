<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:splitMotionEvents="false"
        android:background="@color/color_F5F6F8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:singleLine="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cltControl"
            app:layout_constraintStart_toEndOf="@id/viewHeader"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="?actionBarItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewHeader"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/header_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cltControl"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swHeader"
                android:layout_width="40dp"
                android:layout_marginTop="@dimen/padding_small"
                android:visibility="gone"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_height="wrap_content"
                android:thumb="@drawable/thumb_selector"
                app:track="@drawable/track_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_show_keyboard"
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_back"
                android:background="?actionBarItemBackground"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:visibility="gone"
                android:background="@drawable/bg_stroke_save"
                android:id="@+id/txtSave"
                android:textSize="12sp"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="true"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/color_FFA871"
                android:text="@string/save"
                android:fontFamily="@font/inter_semi_bold"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="68dp"
                android:layout_height="34dp"/>

            <View
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>

            <com.tapbi.spark.yokey.ui.custom.view.CustomSquareCardView
                android:id="@+id/img_add_subtype"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/color_transparent"
                app:cardElevation="1dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:padding="5dp"
                    android:background="@drawable/bg_btn_add_theme"
                    android:src="@drawable/ic_plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.tapbi.spark.yokey.ui.custom.view.CustomSquareCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>