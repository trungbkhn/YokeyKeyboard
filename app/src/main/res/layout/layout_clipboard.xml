<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/bg_circle_black"
        android:id="@+id/imgViewBackClipboard"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:src="@drawable/img_back_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleClipboard"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:text="@string/clipboard"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgViewBackClipboard"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/imgViewBackClipboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_back_30">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclClipboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtNodataClipboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/there_is_no_data_in_the_clipboard"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/spinkitClipboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>