<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/btnViewItemLanguage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_item_app_language"
            app:layout_constraintBottom_toTopOf="@id/viewBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/btnViewItemLanguage"
            app:layout_constraintStart_toStartOf="@id/btnViewItemLanguage"
            app:layout_constraintTop_toTopOf="@id/btnViewItemLanguage" />

        <com.tapbi.spark.yokey.ui.custom.view.CustomRadioButton
            android:id="@+id/radioButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/txtNameLanguage"
            app:layout_constraintEnd_toEndOf="@id/btnViewItemLanguage"
            app:layout_constraintTop_toTopOf="@id/txtNameLanguage" />
        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnViewItemLanguage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>