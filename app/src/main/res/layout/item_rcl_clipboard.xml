<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtItemClipboard"
        android:textColor="@color/white"
        android:background="@drawable/bg_press_black"
        android:lines="1"
        android:ellipsize="end"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="@string/hidden"
        android:layout_width="0dp"
        android:layout_toStartOf="@id/imgRemoveClipboard"
        android:layout_alignParentStart="true"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/imgRemoveClipboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_circle_black"
        android:padding="8dp"
        android:src="@drawable/ic_delete" />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/txtItemClipboard"
        android:background="@color/color_4Dffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>