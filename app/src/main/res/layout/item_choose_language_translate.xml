<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RadioButton
            android:id="@+id/rBtnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16sp"
            android:buttonTint="@color/color_tint_radio"
            android:text="English/English"
            android:singleLine="true"
            android:paddingStart="@dimen/padding_4dp"
            android:paddingEnd="@dimen/padding_30dp"
            android:button="@drawable/radio_button_inset"
            android:textColor="@color/color_999999"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vLine"
            android:background="@drawable/bg_ripple_select_item"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp" />

        <View
            android:id="@+id/vClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vLine"
            android:background="?android:attr/selectableItemBackground"
            />

        <ImageView
            android:id="@+id/vLine"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:visibility="gone"
            android:src="@color/color_8F90A6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>