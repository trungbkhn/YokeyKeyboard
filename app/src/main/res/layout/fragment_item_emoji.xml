<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tapbi.spark.yokey.ui.main.home.emoji.FragmentItemSticker">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_emoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent" />
        <com.tapbi.spark.yokey.ui.custom.view.RecyclerFastScroller
            android:id="@+id/fast_scroll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:rfs_touchTargetWidth="35dp"
            app:layout_constraintTop_toTopOf="@id/recycler_view_emoji"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_emoji"
            app:layout_constraintEnd_toEndOf="parent"
           />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/spin_kit_emoji"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading_circle.json"
            app:lottie_loop="true" />

        <LinearLayout
            android:id="@+id/ll_check_internet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_signal_wifi_off_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_check_internet"
                android:textColor="@color/color_8F90A6"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>