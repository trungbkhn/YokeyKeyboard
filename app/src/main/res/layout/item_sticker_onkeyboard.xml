<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_setting_sticker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/imgItemSticker"
        app:layout_constraintEnd_toEndOf="@id/imgItemSticker"
        app:layout_constraintStart_toStartOf="@id/imgItemSticker"
        app:layout_constraintTop_toTopOf="@id/imgItemSticker">

        <ImageView
            android:id="@+id/view_setting_sticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/bg_stroke_corner_4" />


    </androidx.cardview.widget.CardView>

    <com.tapbi.spark.yokey.ui.custom.view.SquareImageView
        android:id="@+id/imgItemSticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_delete_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/exit_img"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imgItemSticker"
        app:layout_constraintTop_toTopOf="@id/imgItemSticker" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/imgItemSticker" />

</androidx.constraintlayout.widget.ConstraintLayout>