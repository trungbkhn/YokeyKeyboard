<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintBottom_toTopOf="@id/ctlContent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlContent"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_done_language"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNameKeyboard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="5dp"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSticker"
                        app:cardCornerRadius="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtNameKeyboard"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="180dp">

                        <ImageView
                            android:id="@+id/imgSticker"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/btnApplySticker"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_color"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:focusable="true"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="25dp"
                        android:text="@string/add_sticker"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/cvSticker"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/txtDescriptionDowload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="@string/download_this_sticker_to_use"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/cvSticker"
                        tools:ignore="RtlSymmetry" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_black_corner_4_press"
                        android:padding="1dp"
                        android:paddingEnd="8dp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/txtDescriptionDowload"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/imgDownload"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_vec_download"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/downloadd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7sdp"
                            app:layout_constraintStart_toEndOf="@id/imgDownload"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:id="@+id/tvForFree"
                            android:text="@string/for_free"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            android:textAllCaps="true"
                            app:layout_constraintStart_toEndOf="@id/imgDownload"
                            app:layout_constraintTop_toBottomOf="@id/tvDownload" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        app:layout_constraintTop_toBottomOf="@+id/btnApplySticker"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>


                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/btnApplySticker"
                        app:layout_constraintBottom_toBottomOf="@id/btnApplySticker"
                        android:id="@+id/spin_kit_detail_activity"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:lottie_fileName="loading_circle.json"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlPremium2"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginHorizontal="15dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_fff6f0_corner_8_press"
                        app:layout_constraintTop_toBottomOf="@id/btnApplySticker"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp">

                        <TextView
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="@string/remove_all_ads"
                            android:drawableStart="@drawable/ic_noti"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                        android:id="@+id/fr_ads_native"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:tag="@string/tag_native_detail_sticker"
                        android:minHeight="50dp"
                        app:priority="1"
                        app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                        app:layout_constraintTop_toBottomOf="@id/ctlPremium2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlPremium"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_fff6f0_corner_8_press"
                    app:layout_constraintTop_toBottomOf="@id/ctlContent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/remove_all_ads"
                        android:drawableStart="@drawable/ic_noti"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>