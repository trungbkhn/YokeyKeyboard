<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imgBackSticker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:src="@drawable/ic_left"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/imgAddSticker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:src="@drawable/ic_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:padding="5dp"
        android:id="@+id/rclStickerOnKeyboard"
        app:layout_constraintTop_toBottomOf="@id/imgBackSticker"
        app:layout_constraintBottom_toTopOf="@id/rclTabSticker"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/add_sticker"
        android:padding="5dp"
        android:id="@+id/txtAddSticker"
        app:layout_constraintTop_toBottomOf="@id/imgBackSticker"
        app:layout_constraintBottom_toTopOf="@id/rclTabSticker"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <View
        android:background="@color/color_66C5C5C5"
        app:layout_constraintTop_toTopOf="@id/rclTabSticker"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rclTabSticker"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>