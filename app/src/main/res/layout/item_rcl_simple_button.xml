<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imgSimpleButton"
        android:padding="10dp"
        android:src="@drawable/ic_type_none"
        android:background="@drawable/bg_unselect_simplebutton"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/imgUsingSimple"
        android:src="@drawable/ic_using"
        app:layout_constraintEnd_toEndOf="@id/imgSimpleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <View
        android:id="@+id/viewSpaceEnd"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/imgSimpleButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="15dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>