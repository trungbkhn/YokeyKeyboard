<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        tools:context="com.tapbi.spark.yokey.ui.main.customize.CreateThemeFragment">

        <EditText
            android:id="@+id/edtView"
            android:visibility="visible"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintTop_toTopOf="@id/edtView"
            app:layout_constraintBottom_toBottomOf="@id/edtView"
            android:background="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:background="?actionBarItemBackground"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:maxWidth="100dp"
            android:background="@drawable/ripple_save"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/color_FFE600"
            android:text="@string/save_theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginStart="40dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/customize"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/color_000000"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/txtSave"
            app:layout_constraintStart_toEndOf="@id/imgBack"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_C7C9D9"
            app:layout_constraintBottom_toBottomOf="@id/tabLayoutCustomize" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutCustomize"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:tabPaddingStart="0dp"
            app:tabRippleColor="@null"
            android:background="@color/color_transparent"
            app:layout_constraintTop_toBottomOf="@id/imgBack"
            app:tabIndicatorColor="@color/color_transparent"
            app:tabTextAppearance="@style/tab_text"
            app:tabMode="scrollable" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpCustomize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/ctlPreview"
            app:layout_constraintTop_toBottomOf="@id/tabLayoutCustomize" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlPreview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
            android:id="@+id/spaceBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvShowHideKeyboard"
            app:cardElevation="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spaceBackgroundPager"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:background="@drawable/background_capture"
                android:id="@+id/imgShowHideKeyboard"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_show_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/spaceBackgroundPager"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/ctlPreview"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>