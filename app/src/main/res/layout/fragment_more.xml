<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/background_header"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_more"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            style="@style/KeyboardTheme.LXX_Light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background_div_setting"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/tv_rate_star"
                    android:gravity="center_vertical"
                    style="@style/KeyboardTheme.LXX_Light"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="?android:selectableItemBackground"
                    >
                    <ImageView
                        android:id="@+id/img_rate"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/img_rate"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_rate_5_star_for_rgb_keyboard"
                        android:layout_toEndOf="@+id/img_rate"
                        android:paddingStart="5dp"
                        tools:ignore="RtlSymmetry"
                        style="@style/KeyboardTheme.LXX_Light"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_row"
                        android:layout_alignParentEnd="true"
                        android:alpha="0.8"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/background_div_setting"
                    android:layout_marginStart="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/tv_feedback"
                    android:gravity="center_vertical"
                    style="@style/KeyboardTheme.LXX_Light"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="?android:selectableItemBackground"
                    >
                    <ImageView
                        android:id="@+id/img_feedback"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/img_feedback"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/help_and_feedback"
                        style="@style/KeyboardTheme.LXX_Light"
                        android:layout_toEndOf="@+id/img_feedback"
                        android:paddingStart="5dp"
                        tools:ignore="RtlSymmetry"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_row"
                        android:layout_alignParentEnd="true"
                        android:alpha="0.8"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/background_div_setting"
                    android:layout_marginStart="10dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/tv_policy"
                    android:gravity="center_vertical"
                    style="@style/KeyboardTheme.LXX_Light"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="?android:selectableItemBackground"
                    >
                    <ImageView
                        android:id="@+id/img_policy"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/img_policy"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_policy_rgb_keyboard"
                        style="@style/KeyboardTheme.LXX_Light"
                        android:layout_toEndOf="@+id/img_policy"
                        android:paddingStart="5dp"
                        tools:ignore="RtlSymmetry"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_expand_row"
                        android:layout_alignParentEnd="true"
                        android:alpha="0.8"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/background_div_setting"
                    android:layout_marginStart="10dp"

                    />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>



</LinearLayout>