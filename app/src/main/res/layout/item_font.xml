<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/cvBackground" />

        <com.tapbi.spark.yokey.ui.custom.view.CustomCardViewFont
            android:id="@+id/cvBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="parent">


        </com.tapbi.spark.yokey.ui.custom.view.CustomCardViewFont>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/color_transparent"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="@id/cvBackground"
            app:layout_constraintEnd_toEndOf="@id/cvBackground"
            app:layout_constraintStart_toStartOf="@id/cvBackground"
            app:layout_constraintTop_toTopOf="@id/cvBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lnItemFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgBackgroundFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_60"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/txtNameFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/gl_60" />

                <TextView
                    android:id="@+id/txtDemoFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/gl_60"
                    tools:ignore="SmallSp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvAddFont"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="60"
                        android:background="@drawable/bg_btn_add_font"
                        android:padding="8dp"
                        android:src="@drawable/ic_add" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/itemFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/cvBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>