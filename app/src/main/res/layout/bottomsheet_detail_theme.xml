<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:background="@color/white">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/progress_bar_ads_preview_save"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.tapbi.spark.yokey.ui.custom.view.CustomPreviewTheme
                            android:id="@+id/img_preview_theme_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.tapbi.spark.yokey.ui.custom.view.CustomPreviewMyTheme
                            android:id="@+id/imgPreviewMyTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/gl_60"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.5" />

                        <TextView
                            android:id="@+id/txtNameFont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@id/gl_60" />

                        <TextView
                            android:id="@+id/txtDemoFont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:layout_constraintTop_toBottomOf="@id/gl_60"
                            tools:ignore="SmallSp" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/groupDemoFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:constraint_referenced_ids="txtNameFont,txtDemoFont" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <com.tapbi.spark.yokey.ui.custom.view.ClickableFrameLayout
                    android:id="@+id/fl_admob_native_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:tag="@string/tag_native_detail_item"
                    android:gravity="center_vertical"
                    android:minHeight="70sp"
                    app:layout_constraintTop_toBottomOf="@+id/cv" />

                <TextView
                    android:id="@+id/txtNameKeyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/color_28293D"
                    android:textDirection="ltr"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/fl_admob_native_preview"
                    tools:ignore="RtlSymmetry" />

                <View
                    android:id="@+id/txtNameKey"
                    android:layout_width="95dp"
                    android:layout_height="40.5dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_transparent"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/fl_admob_native_preview"
                    tools:ignore="MissingConstraints,RtlSymmetry" />

                <TextView
                    android:id="@+id/btn_apply_theme"
                    style="@style/KeyboardTheme.LXX_Light"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/bg_stroke_color"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/apply_theme"
                    android:textAllCaps="true"
                    android:textColor="@color/color_28293D"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/display_view" />

<!--                <View-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/btn_apply_theme"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="50dp"/>-->

                <ProgressBar
                    android:id="@+id/progress_bar_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/display_view"/>


                <EditText
                    android:id="@+id/editTest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:hint="@string/text_ledkey_for_life_beauty"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/txtNameKeyboard"
                    tools:ignore="RtlSymmetry" />

                <com.tapbi.spark.yokey.ui.custom.view.CustomEditText
                    android:id="@+id/editTest2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_bg_selector"
                    android:backgroundTint="#C7C9D9"
                    android:gravity="center_vertical|fill"
                    android:hint="@string/text_ledkey_for_life_beauty"
                    android:maxLines="1"
                    android:textDirection="ltr"
                    android:paddingStart="14dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_choice_tab_bar"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/txtNameKeyboard"
                    tools:ignore="RtlSymmetry" />
                <!--                <androidx.constraintlayout.widget.Guideline-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:id="@+id/gd"-->
                <!--                    android:orientation="vertical"-->
                <!--                    app:layout_constraintGuide_percent="0.020"-->
                <!--                    android:layout_height="wrap_content"/>-->
                <ImageView
                    android:id="@+id/border_sticker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_sticker"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@id/display_view"
                    app:layout_constraintStart_toStartOf="@id/txtNameKey"
                    app:layout_constraintTop_toBottomOf="@id/txtNameKey" />

                <ImageView
                    android:id="@+id/btn_delete_sticker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginBottom="45dp"
                    android:src="@drawable/img_cancels"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@id/display_view"
                    app:layout_constraintStart_toStartOf="@id/txtNameKey"
                    app:layout_constraintTop_toBottomOf="@id/txtNameKey" />

                <View
                    android:id="@+id/display_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editTest2"
                    tools:ignore="MissingConstraints,WebViewLayout" />

                <View
                    android:id="@+id/viewSpaceBottom"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_apply_theme"
                    tools:layout_editor_absoluteX="0dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_load_theme_in_detail_theme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#66000000"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/srl"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/spin_kit_detail_activity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:lottie_autoPlay="true"
                app:lottie_fileName="loading_circle.json"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_check_internet_detail_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/srl"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_signal_wifi_off_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_check_internet"
                android:textColor="@color/color_8F90A6"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textShowApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_toast"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:lines="2"
            android:visibility="invisible"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:padding="@dimen/padding_5dp"
            android:text="@string/apply_themes_success"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text14sp"
           android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>