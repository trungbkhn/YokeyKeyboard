<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:context="com.tapbi.spark.yokey.ui.main.premium.sub.InformationPremiumFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_premium_desp_download"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_normal_extra5dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/unlock_all_themes"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_des_premium_desp_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="@string/download_and_use_free_150_theme"
            android:textColor="@color/color_999999"
            android:textSize="10sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/tv_premium_desp_download"
            app:layout_constraintTop_toBottomOf="@+id/tv_premium_desp_download"
            tools:ignore="SmallSp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>